


<div class="products-section" style="display:none;margin-top:28%;margin-bottom:2px;">
  <div class="container-fluid">
        <div class="col-md-12" style=";line-height:3em;margin-bottom:20px;">
          <span style="float:right;font-size:2.5em;margin-right:50px;" onclick=navigateToMenu()><img src="/images/icons/del.png" style="width:60px;margin-right:20px;" /></span>
          <p class="productMainCatName" style="font-size:5em;  font-family: boldFont;"></p>
          <p class="productSubCatName"></p>
        </div>
         <div class="row" id="productData" style="padding:15px;"></div>
   </div>
  </div>


  <div class="product-details" style="display:none;">
     <div style="float:left;font-size:2.5em;margin-top:150px;" onClick=closeProductDetails()>
       <span><img src="/images/icons/back.png" style="width:30px;height:30px;"> <span class="productDetailName"></span></span>
     </div>
    <div style="font-size:2.5em;display:none;" class="productDetailDataSection">
     <div style="height:600px;margin-bottom:20px;margin-top:250px;">
       <img src="" style="width:100%;height:100%;" id="productImage">
     </div>

     <span id="description"></span><br/>
     <input type="hidden" id="cartInputID"/>
     <div class="options" style="margin-top:20px;border-top:1px solid #000;"></div>
     <div style="text-align:center;margin-top:50px;">
       <input type="hidden" id="productPrice">
       <input type="hidden" id="productDiscount">
       <button type="button" class="addtocart  addToCartStyle" style="display:none">Add Item</button>
       <button type="button" class="addToCartStyle cartItemAdded" style="display:none"><i class="far fa-check-circle"></i> Added to cart!</button>
       <button type="button" class="addToCartStyle goToCart" style="display:none" onclick="navigateToCart()">Go to cart</button>
       <button type="button" class="addToCartStyle signupBeforeAddToCart" style="display:none" onclick="window.location.href ='/mobileApp/auth'"><i class="fa fa-user-circle"></i> Signup Or Login!</button>
     </div>
   </div>
  </div>
